{% extends "LimitlessKarhabtiBundle::layout.html.twig" %}
{% block title %}
    {{ parent() }}
{% endblock %}
{% block body%}
    <!-- Header 1
 ============================================ -->
    <div class="header-area header-absolute header-transparent">
        <div class="header-bottom-2 sticky">
            <div class="container">
                <div class="row">
                    <!-- Header Bottom -->
                    <div class="col-xs-12">
                        <div class="navbar-header">
                            <a href="{{ path('limitless_karhabti_homepage') }}" class="logo navbar-brand"><img id="logo_img" src="{{ asset('bundles/limitlesskarhabti/img/logo/color-1.png')}}" alt="logo" /></a>
                        </div>
                        <div class="main-menu menu-style-6 mean-menu float-right">
                            <nav>
                                <ul>
                                    <li ><a href="{{ path('limitless_karhabti_homepage') }}">home</a></li>
                                    <li><a href="#">Profil</a></li>
                                    <li class="active"><a href="#">Offre/Pack<i class="icofont icofont-simple-down"></i></a>
                                        <ul>
                                            <li><a href="{{ path('responsable_offre_index') }}">Offre</a></li>
                                            <li><a href="{{ path('responsable_offre_index') }}">Pack</a></li>
                                        </ul>
                                    </li>
                                    <li ><a href="{{ path('responsable_vehicule_index') }}">Vehicule</a></li>
                                    <li><a href="#">Moniteur</a></li>
                                    <li ><a href="{{ path('reponsable_tache_index') }}">Planning</a></li>
                                    <li><a href="#">Cour/Examen<i class="icofont icofont-simple-down"></i></a>
                                        <ul>
                                            <li><a href="#">Cour</a></li>
                                            <li><a href="#">Examen</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="#">contact</a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="mobile-menu"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner -->
    <div class="page-banner-area overlay overlay-black overlay-70">
        <div class="container">
            <div class="row">
                <div class="page-banner text-center col-xs-12">
                    <h1>responsable auto école</h1>
                </div>
            </div>
        </div>
    </div>



    <!-- Gallery Area
============================================ -->
    <style type="text/css">
        button {
            background-color: #dec839; /* Green */
            border: 1px solid #dec839;
            color: white;
            padding: 0px 0px;
            text-decoration: none;
            font-size: 16px;
            display: inline-block;
            width: auto;
            line-height: 30px;
        }
    </style>

    <div style="padding-top: 5%;" class="blog-area bg-white pt-90 pb-90">


        <div class="container">
            <!-- Gallery Grid -->


            <div class="row">
                <div class="blog-wrapper float-right col-md-8 col-xs-12">

                    <div style="padding-top: 10%;" class="single-blog">

                        <h4 class="blog-title">{{ pack.nom }}</h4>
                        <div class="blog-meta fix">
                            <p class="float-right">
                                <button><a class="btn color" href="{{ path('responsable_pack_edit', { 'id': pack.id }) }}">Modifier</a></button>
                                <button><a class="btn color" href="{{ path('responsable_pack_delete',{id:pack.id}) }}">Supprimer</a></button>
                            </p>
                        </div>
                        <div class="blog-description">
                            <p><small>Ce Pack contient {{ pack.nbrHeureCode}} de code  avec {{ pack.prixUcode }} pour une heure dt <b>&</b> Nombre d'heure conduite {{ pack.nbrHeureConduite }} avec {{ pack.prixUconduite }} dt pour une heure. <br>
                                    <br>
                            <p>Description :</p>
                            <blockquote>
                                <ul>
                                    <li>{{ pack.description }}</li>
                                </ul>
                            </blockquote>
                            <p>Promotion :</p>
                            <blockquote>
                                <ul>
                                    <li>{{ pack.promotion }} <b>%</b></li>
                                </ul>
                            </blockquote>
                            <p>Prix après la promotion :</p>
                            <blockquote>
                                <ul>
                                    <li>{{ pack.prixtotal }}</li>
                                </ul>
                            </blockquote>




                            <p>{{ socialButtons()}}</p>

                        </div>
                    </div>

                </div>
                <div class="sidebar col-md-4 col-xs-12">

                    <div class="blog-image">
                        <ul>
                            <li style="text-align: left">
                                <button><a class="btn color" href="{{ path('responsable_pack_index',{id:pack.id}) }}">Retour à la liste </a></button>
                            </li>
                        </ul>

                        <img  src="{{ asset('bundles/limitlesskarhabti/images/offre/pack.png') }}" alt="" />
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
