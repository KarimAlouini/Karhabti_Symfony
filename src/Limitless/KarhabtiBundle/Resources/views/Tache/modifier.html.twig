            </div>
            <div class="row">
                <!-- Contact Form -->
                <div class="contact-form form text-left col-md-8 col-sm-7 col-xs-12"style="width: 100%">
                    <style type="text/css">
                        button {
                            background-color: #dec839; /* Green */
                            border: 1px solid #dec839;
                            color: white;
                            padding: 0px 0px;
                            text-align: center;
                            text-decoration: none;
                            font-size: 16px;
                            display: inline-block;
                            width: auto;
                            line-height: 30px;
                        }
                    </style>
                    <ul>
                        <li style="margin-bottom: 4%"><button ><a class="btn color"   href="{{ path('reponsable_tache_index') }}">Back to the list</a></button></li>
                    </ul>


                    {{ form_start(edit_form) }}


                    <div class="input-2">
