                        <div class="input">
                            <div class="panel panel-panel">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Date Debut</h3>
                                </div>
                                <div class="panel-body">
                                    <label style="color:red;">{{ err2 }}</label>
                                    {{ form_widget(edit_form.heure_debut,{'attr':{'placeholder':'Heure de debut'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="input">
                            <div class="panel panel-panel">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Date Fin</h3>
                                </div>
                                <div class="panel-body">
                                    <label style="color:red;">{{ err2 }}</label>
                                    {{ form_widget(edit_form.heure_fin,{'attr':{'placeholder':'Heure de fin'}}) }}
