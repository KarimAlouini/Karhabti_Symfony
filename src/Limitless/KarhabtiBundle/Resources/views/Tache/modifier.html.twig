                                    {{ form_widget(edit_form.client,{'attr':{'placeholder':'Client'}}) }}
                        </div>

                        <div class="input">
                                    <h3 class="panel-title">Moniteur</h3>
                                    {{ form_widget(edit_form.moniteur,{'attr':{'placeholder':'Moniteur'}}) }}
