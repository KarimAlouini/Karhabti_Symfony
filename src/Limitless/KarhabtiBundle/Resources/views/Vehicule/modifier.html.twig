    <!-- Banner -->
    <div class="page-banner-area overlay overlay-black overlay-70">
        <div class="container">
            <div class="row">
                <div class="page-banner text-center col-xs-12">
                    <h1>Header One</h1>
                    <ul>
                        <li><a href="#">home</a></li>
                        <li><span>header one</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="blog-area bg-white pt-90 pb-90">
        <div class="container">
            <!-- Section Title -->
            <div class="row">
                <div class="section-title text-center col-xs-12 mb-45">
                    <h3 class="heading">Modifier une Vehicule</h3>
                    <i class="icofont icofont-traffic-light"></i>

                </div>

            </div>
            <div class="row">
                <!-- Contact Form -->
                <div class="contact-form form text-left col-md-8 col-sm-7 col-xs-12"style="width: 100%">
                    <style type="text/css">
                        button {
                            background-color: #dec839; /* Green */
                            border: 1px solid #dec839;
                            color: white;
                            padding: 0px 0px;
                            text-align: center;
                            text-decoration: none;
                            font-size: 16px;
                            display: inline-block;
                            width: auto;
                            line-height: 30px;
                        }
                    </style>
                    <ul>
                        <li style="margin-bottom: 3%"><button ><a class="btn transparent "   href="{{ path('responsable_vehicule_index') }}">Back to the list</a></button></li>
                    </ul>


                    {{ form_start(edit_form) }}


                    <div class="input-2">
                        <div class="input">{{ form_widget(edit_form.matricule,{'attr':{'placeholder':'Matricule'}}) }}</div>
                        <div class="input">{{ form_widget(edit_form.file,{'attr':{'placeholder':'Image'}}) }}</div>
                        <div class="input">{{ form_widget(edit_form.date_expiration_assurance,{'attr':{'placeholder':'Date Expiration Assurance'}}) }}</div>
                        <div class="input">{{ form_widget(edit_form.date_expiration_vignette,{'attr':{'placeholder':'Date Expiration Vignette'}}) }}</div>
                        <div class="input">{{ form_widget(edit_form.date_expiration_visite,{'attr':{'placeholder':'Date Expiration Visite'}}) }}</div>
                        <div class="input">{{ form_widget(edit_form.marque,{'attr':{'placeholder':'Marque','class' : 'input'}}) }}</div>
                        <div class="input">{{ form_widget(edit_form.modele,{'attr':{'placeholder':'Modele'}}) }}</div>
                        <div class="input">{{ form_widget(edit_form.typeV,{'attr':{'placeholder':'Type Vehicule'}}) }}</div>
                    </div>
                    <div class="input input-submit">
                        <input style="margin-right: 1%" type="submit" value="Edit" />
                       <button><a class="btn color" href="{{ path('responsable_vehicule_deleteid',{id:vehicule.id}) }}">Supprimer</a></button>
                    </div>
                    {{ form_end(edit_form) }}





                    <div class="input input-submit">

                    </div>

                    
                </div>
            </div>

        </div>
    </div>
