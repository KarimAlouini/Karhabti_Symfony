{% extends "LimitlessKarhabtiBundle::layoutMoniteur.html.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/starrating/css/rating.css') }}"/>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="{{ asset('bundles/starrating/js/rating.js') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/font-awesome/css/font-awesome.min.css') }}"/>
    <!-- Header 1
     ============================================ -->
    <div class="header-bottom-2 sticky">
        <div class="container">
            <div class="row">
                <!-- Header Bottom -->
                <div class="col-xs-12">
                    <div class="navbar-header">
                        <a href="{{ path('limitless_karhabti_homepage') }}" class="logo navbar-brand"><img id="logo_img"
                                                                                                           src="{{ asset('bundles/limitlesskarhabti/img/logo/color-1.png') }}"
                                                                                                           alt="logo"/></a>
                    </div>
                    <div class="main-menu menu-style-6 mean-menu float-right">
                        <nav>
                            <ul>
                                <li ><a href="{{ path('limitless_karhabti_Moniteur_homepage') }}">home</a></li>
                                <li ><a href="{{ path('moniteur_index') }}">Profil</a></li>
                                <li ><a href="{{ path('moniteur_tache_index') }}">Planning</a></li>
                                <li ><a href="{{ path('moniteur_agence_index') }}">Agences</a></li>
                                <li class="active"><a href="{{ path('AffichageAvis') }}">Mes Avis</a></li>
                                <li><a href="{{ path('limitless_karhabti_mail_moniteur') }}">contact</a></li>
                            </ul>
                        </nav>
                    </div>
                    <div class="mobile-menu"></div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <!-- Banner -->
    <div class="page-banner-area overlay overlay-black overlay-70">
        <div class="container">
            <div class="row">
                <div class="page-banner text-center col-xs-12">
                    <h1>Moniteur</h1>

                </div>
            </div>
        </div>
    </div>

    <div class="blog-area bg-white pt-90 pb-90">
        <div class="container">
            <!-- Section Title -->
            <div class="row">
                <div class="section-title text-center col-xs-12 mb-45">
                    <h3 class="heading">Liste des notes</h3>

                    <i class="icofont icofont-traffic-light"></i>
                </div>
            </div>
            <div class="row">
                <!-- Contact Form -->
                <div class="contact-form form text-left col-md-8 col-sm-7 col-xs-12" style="width: 100%">
                    <style type="text/css">
                        button {
                            background-color: #dec839; /* Green */
                            border: 1px solid #dec839;
                            color: white;
                            padding: 0px 0px;
                            text-align: center;
                            text-decoration: none;
                            font-size: 16px;
                            display: inline-block;
                            width: auto;
                            line-height: 30px;
                        }
                    </style>
                    <ul>
                        <li style="text-align: center">
                            <button><a class="btn color " href="{{ path('AjoutAvis') }}">Noter un client</a></button>
                        </li>
                    </ul>
                    <table class="table" style="width: 100%;margin-top: 3%;" >
                        <thead class="thead-inverse" style="text-align: center">
                        <tr>
                            <th style="width: 25%"><h3>Client</h3></th>
                            <th style="width: 25%"><h3>Contenu</h3></th>
                            <th style="width: 25%"><h3>Rating</h3></th>
                            <th style="text-align: center;width: 25%;"><h3>Action</h3></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for x in avis %}
                            <tr>
                                <td style="width: 25%">{{ x.client.nom }}</td>
                                <td style="width: 25%">{{ x.contenu }}</td>
                                <td style="width: 25%">{{ x.rating|rating }}</td>
                                <td style="text-align: center;width: 25%;">
                                    <a class="btn color" href="{{ path('UpdateAvis',{id:x.id}) }}">Modifier</a>
                                    <a class="btn color" href="{{ path('DeleteAvis',{id:x.id}) }}">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                    <p class="form-messege"></p>
                </div>
            </div>
        </div>

    </div>
{% endblock %}